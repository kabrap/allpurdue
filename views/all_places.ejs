<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>All Places</title>
  </head>
  <body>
    <h1>All Places</h1>
    <ul>
      <% places.forEach(function(place) { %>
        <li>
          <h2><%= place.name %></h2>
          <p><%= place.description %></p>
          <p><strong>Type:</strong> <%= place.placeType %></p>
          <% if (place.tags.length > 0) { %>
            <p><strong>Tags:</strong> <%= place.tags.join(', ') %></p>
          <% } %>
          <p><strong>Location:</strong> <%= place.location.coordinates[1] %>, <%= place.location.coordinates[0] %></p>
          <p><a href="/places/<%= place._id %>">View</a></p>
        </li>
      <% }); %>
    </ul>
  </body>
</html>
