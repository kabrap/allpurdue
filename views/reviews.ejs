<h1>Reviews for <%= place.name %>:</h1>

<% if (reviews.length === 0) { %>
  <p>No reviews yet. Be the first to leave a review!</p>
<% } else { %>
  <% reviews.forEach(function(review) { %>
    <div>
      <p>Rating: <%= review.rating %></p>
      <p><%= review.text %></p>
      <p>Likes: <%= review.likes %> 
        <% if (review.likes_by.includes(req.user._id)) { %>
          <form action="/places/<%= place._id %>/reviews/<%= review._id %>/unlike" method="POST">
            <button type="submit">Unlike</button>
          </form>
        <% } else { %>
          <form action="/places/<%= place._id %>/reviews/<%= review._id %>/like" method="POST">
            <button type="submit">Like</button>
          </form>
        <% } %>
      </p>
    </div>
  <% }); %>
<% } %>
